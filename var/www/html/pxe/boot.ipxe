#!ipxe

set server_ip 192.168.1.1
set iso http://${server_ip}/iso/ubuntu-22.04.5-live-server-amd64.iso

menu Ubuntu PXE
item ubuntu2205 Ubuntu 22.04.5 Live Server
item shell Shell
choose target || goto shell

:ubuntu2205
kernel http://${server_ip}/pxe/ubuntu2205/casper/vmlinuz \
  ip=dhcp boot=casper \
  netboot=http \
  url=${iso} \
  console=ttyS0,115200 ---
initrd http://${server_ip}/pxe/ubuntu2205/casper/initrd
boot

:shell
shell
